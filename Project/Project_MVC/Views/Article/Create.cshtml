@model ArticleModel
@inject IViewLocalizer Localizer
<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-dark">@Localizer["Create Article"]</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="Name">@Localizer["Name"]</label>
			<input asp-for="Name" class="form-control"/>
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Amount">@Localizer["Amount"]</label>
			<input asp-for="Amount" class="form-control" type="number"/>
			<span asp-validation-for="Amount" class="text-danger"></span>
		</div>
		<div class="mb-3">
		<label asp-for="Currency">Оберіть валюту</label>
		<select asp-for="Currency" class="form-control">
			<option value="₴ UAH">₴ UAH</option>
			<option value="$ USD">$ USD</option>
			<option value="€ EUR">€ EUR</option>
			<option value="₿ BTC">₿ BTC</option>
			<!-- Додайте інші валюти або криптовалюти тут -->
		</select>
		<span asp-validation-for="Currency" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-dark text-white" style="width:150px">@Localizer["Save"]</button>
		<a asp-controller="Article" asp-action="Index" class="btn btn-secondary" style="width:150px">@Localizer["Back to List"]</a>
	</div>
</form>