@model CardModel
@inject IViewLocalizer Localizer

<form method="post" asp-action="SetGoalPOST">
	<input asp-for="Name" hidden>
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-dark">@Localizer["SetGoal"]</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="Name">@Localizer["Name"]</label>
			<input asp-for="Name" disabled class="form-control"/>
		</div>
		<div class="mb-3">
			<label asp-for="Amount">Кількість грошей для цілі</label>
			<input asp-for="Amount" class="form-control" type="number" />
		</div>
		<div class="mb-3">
			<label asp-for="Date">Дата цілі</label>
			<input asp-for="Date" class="form-control" type="date" />
			<span asp-validation-for="Date" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-dark text-white" style="width:150px  ">@Localizer["Save"]</button>
		<a asp-controller="Card" asp-action="Cards" class="btn btn-secondary" style="width:150px">@Localizer["Back to List"]</a>
	</div>
</form>