@using Microsoft.AspNetCore.Identity
@inject IViewLocalizer Localizer
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <h5><a id="manage" class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User)</a></h5>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-white"><h5>@Localizer["Logout"]</h5></button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <h5><a class="nav-link text-white" id="register" asp-area="Identity" asp-page="/Account/Register">@Localizer["Register"]</a></h5>
    </li>
    <li class="nav-item">
            <h5><a class="nav-link text-white" id="login" asp-area="Identity" asp-page="/Account/Login">@Localizer["Login"]</a></h5>
    </li>
}
</ul>
